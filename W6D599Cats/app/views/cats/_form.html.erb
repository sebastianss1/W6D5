
<% if edit %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Edit the Cat" %>
<% else %>
    <% action_url = cats_url %>
    <% button_text = "Add a Cat" %>
<% end%>
    


<form action="<%= action_url %>" method = "post">

    <% if edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>

    <label> Name <br>
        <input type="text" name="cat[name]" value="<%=cat.name%>" >
    </label>
    <br> <br>

    <label> Sex <br>
        <input type="radio" id = "M" name="cat[sex]" value="<%=cat.sex%>" >
            <label for="M">Male</label>
        <input type="radio" id = "F" name="cat[sex]" value="<%=cat.sex%>" >
                <label for="F">Female</label><br>
    </label>
    <br> <br>



    <label for ="colors" > Color </label> <br>
        <select id = "colors" name = "cat[color]" value = <%cat.color%>>
            <option disabled selected > -- Select a Color -- </option>
            <% CAT_COLOR.each do |cat_color|%>
                <option>
                <%= cat_color%> 
                value = <%="cat_color"%>
                </option>
            <%end%>
        </select>

    <br> <br>

    <label> Birth Date: <br> 
            <input type="date" name="cat[birth_date]" value="<%=cat.birth_date%>" >
        </label>
    </label>
    <br> <br>
    <label> Description:  </label> <br>
            <textarea type="text" name="cat[description]" value="<%=cat.description%>"> </textarea>

    <br><br>

    <input type="submit" value="<%= cats_url %>" >

    <a href="<%= cats_url %>"> Show all Cats</a>


</form >

